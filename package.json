{
  "name": "cs2-memory-game",
  "description": "A Counter-Strike 2 themed memory game built with Nuxt 3, Vue 3, and TypeScript",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "nuxt typecheck",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:all": "npm run lint:eslint && npm run lint:prettier",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:prettier:fix"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.4.1",
    "@pinia/nuxt": "^0.11.1",
    "@primeuix/themes": "^1.1.1",
    "@primevue/forms": "^4.3.5",
    "@primevue/themes": "^4.3.5",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/pixi.js": "^4.8.9",
    "@vueuse/nuxt": "^13.4.0",
    "eslint": "^9.29.0",
    "nuxt": "^3.17.5",
    "pinia": "^3.0.3",
    "pixi-filters": "^6.1.3",
    "pixi.js": "^8.10.1",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.5",
    "tailwindcss": "^4.1.10",
    "ua-parser-js": "^2.0.3",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.19.1",
    "@nuxtjs/tailwindcss": "^7.0.0-beta.0",
    "@playwright/test": "^1.53.0",
    "@primevue/nuxt-module": "^4.3.5",
    "@types/ua-parser-js": "^0.7.39",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "happy-dom": "^17.6.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3",
    "vue-tsc": "^2.2.10"
  }
